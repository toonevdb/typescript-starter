{
  "name": "typescript-starter",
  "version": "0.0.1",
  "description": "Starter template for typescript project or library.",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc --out docs --exclude '**/*.spec.ts' src",
    "lint": "./node_modules/.bin/tslint -c tslint.json -t stylish 'src/**/*.ts'",
    "test": "./node_modules/.bin/mocha -r ts-node/register src/**/*.spec.ts",
    "test:watch": "./node_modules/.bin/mocha -r ts-node/register src/**/*.spec.ts --watch --watch-extensions ts"
  },
  "author": "Anthony Vanden Bossche <toonevdb@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "standard-version": "^4.3.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  }
}
